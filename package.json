{
  "name": "next-image-placeholder",
  "version": "1.0.2",
  "description": "Lightweight server-side blur placeholder and dominant color extraction for Next.js",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "react-server": "./dist/index.mjs",
      "node": {
        "import": "./dist/index.mjs",
        "require": "./dist/index.cjs"
      },
      "default": "./dist/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "browser": {
    "./dist/index.mjs": false,
    "./dist/index.cjs": false
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm build && pnpm test",
    "example": "tsx examples/basic-usage.ts"
  },
  "keywords": [
    "nextjs",
    "image",
    "blur",
    "placeholder",
    "lqip",
    "dominant-color",
    "optimization",
    "blurdataurl"
  ],
  "author": "Solomon Akuson <akusonsolomon15@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/heysolomon/next-image-placeholder"
  },
  "bugs": {
    "url": "https://github.com/heysolomon/next-image-placeholder/issues"
  },
  "homepage": "https://github.com/heysolomon/next-image-placeholder#readme",
  "license": "MIT",
  "packageManager": "pnpm@10.20.0",
  "peerDependencies": {
    "sharp": "^0.34.5"
  },
  "dependencies": {
    "fast-average-color-node": "^3.1.0"
  },
  "pnpm": {
    "overrides": {
      "sharp": "^0.34.5"
    }
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "@vitest/ui": "^4.0.8",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.8"
  }
}
